</header>

<body>
  <main id="user-create">
    <h1>Atualizar cliente</h1>
    <% if(locals.error){ %>
    <h2 class="error-alert"><%= error.message %></h2>
    <% } %>
    <form action="/user/edit/<%= client.id %>?_method=put" method="post" enctype="multipart/form-data">
      <input value="<%= client.oficina %>" type="text" name="oficina" placeholder="Oficina" />
      <input value="<%= client.nome %>" type="text" name="sobrenome" placeholder="Nome" />
      <input value="<%= client.contato %>" type="number" name="contato" placeholder="Contato" />
      <input type="file" name="workshop" />
      <button type="submit">Atualizar</button>
    </form>
  </main>
</body>
</html>